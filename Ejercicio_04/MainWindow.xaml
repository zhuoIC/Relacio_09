<Window x:Class="Ejercicio_04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relacion 09. Ejercicio 04" Height="350" Width="525">
    <StackPanel>
        <TextBlock Text="Suma de los enteros entre N1 y N2" Background="AliceBlue" Foreground="Blue" FontFamily="Arial" FontSize="20" TextAlignment="Center"></TextBlock>
        <DockPanel>
            <StackPanel>
                <DockPanel>
                    <Label>Número inicial: </Label>
                    <TextBox Width="90" Name="tbxInput"></TextBox>
                </DockPanel>
                <DockPanel>
                    <Label>Número final: </Label>
                    <TextBox Width="90" Name="tbxOutput"></TextBox>
                </DockPanel>
            </StackPanel>
            <DockPanel Height="23" Width="80">
                <Button Content="Sumar" Name="btnSumar" Click="btnSumar_Click"></Button>
            </DockPanel>
        </DockPanel>
        <StatusBar Name="stbBarraEstado" Background="GhostWhite">
            <Label Name="lblBarraEstado"></Label>
        </StatusBar>
    </StackPanel>
</Window>
